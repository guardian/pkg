{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "ES2020"
  },
  "include": ["src", "script"],
  "exclude": ["node_modules", "dist", "coverage"],
  "ts-node": { "compilerOptions": { "module": "commonjs" } }
}
