{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "rootDir": "src",
    "strict": true,
    "target": "ES2020"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "coverage"]
}
