{
	"extends": "@guardian/eslint-config",
	"parserOptions": {
		"ecmaVersion": 2020
	},

	"ignorePatterns": ["dist"],
	"overrides": [
		{
			"files": ["*.ts"],
			"extends": "@guardian/eslint-config-typescript",
			"rules": {
				"@typescript-eslint/no-var-requires": "off",
				"@typescript-eslint/explicit-module-boundary-types": "off"
			}
		}
	]
}
